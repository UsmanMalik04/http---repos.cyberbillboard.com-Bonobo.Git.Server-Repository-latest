<Window x:Class="ExampleLDWApp.ShowImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleLDWApp"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Icon/AppIcon.png"

        Width="500" Margin="0"  Height="300" WindowStyle="None" ResizeMode="NoResize">
    
    <Grid>
        <Image Name="img" Stretch="Fill" VerticalAlignment="Center" />
        <Button Content="&#9776;" VerticalAlignment="Bottom" HorizontalAlignment="Right" >
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Preserve" />
                    <MenuItem Header="Delete" />
                    <MenuItem Header="Report" />
                    <MenuItem Header="Set to Monitor" />
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</Window>
